@{

    ViewData["Title"] = "Home Page";

}

@model MakeItSmall.Models.URLModel



<div class="text-center">
    </br>
    <h1 class="display-4">texto pra botar o link</h1>
    </br>
    </br>
    <form asp-action="Result" method="post">
        <p>
            <label for="InputURL">URL</label>
            <br \>
            <input type="text" id="InputURL" size=100 asp-for="BIG_URL" required>
        </p>

        <p>
            <label for="NameURL">Nome Desejado</label>
            <br \>
            <input id="NameURL" size=100 asp-for="SMALL_URL" onkeypress="return event.charCode != 32" required>
        </p>

        <button type="submit" class="btn btn-primary">START</button>
    </form>
</div>

<p>

    @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"].Errors.Count > 0)
    {
        <div class="alert alert-danger" role="alert" size=10>
           <strong>Error!</strong> @ViewData.ModelState["Error"].Errors.First().ErrorMessage
        </div>
    }
</p>


